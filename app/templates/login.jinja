{% extends "base.jinja" %}

{% block content %}
    <h2>Login</h2>
    <main>
        <div class="login-row">
            <form action="" method="POST">
            {{ login.hidden_tag() }}
            <p>
                {{ login.username.label }}<br/>
                {{ login.username(size=32) }}
            </p>
            <p>
                {{ login.password.label }}<br/>
                {{ login.password(size=32) }}
            </p>
            <p>
                {{ login.remember.label }}<br/>
                {{ login.remember(size=10) }}
            </p>
            <p> 
                {{ login.submit(class='btn btn-success') }}
            </p>
            </form>
        </div>
    </main>
{% endblock %}