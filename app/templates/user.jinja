{% extends "base.jinja" %}

{% block content %}
<h2>{{ user.username }} Profile </h2>
<h3> Your Collection Area</h3>
<div>

{% for fish in nett %}
<a href= "{{ url_for('social.seefish', species=fish.species, username=current_user.username)}}">{{ fish.species }} </a> <br>

{% endfor %}
</div>
{% if data %}
<div class="card" style="width: 20rem;">
  <img src="{{data[0]['Species Illustration Photo'].src}}" class="card-img-top" alt="...">
  <div class="card-body, text-success">
    <h5 class="card-title"> {{ data[0]["Species Name"] }} </h5>
    <p class="card-text"> {{ data[0]['Habitat']}} </p>
  </div>
</div>

{% endif %}

{% endblock %}